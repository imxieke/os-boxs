#!/usr/bin/env bash
###
 # @Author: Cloudflying
 # @Date: 2021-12-04 13:42:05
 # @LastEditTime: 2021-12-05 17:38:46
 # @LastEditors: Cloudflying
 # @Description: 
 # @FilePath: /.boxs/bin/all/create-boxs-shell-bin
### 

# format cmd language name

BIN_PATH=~/.boxs/bin


if [[ -n "${3}" ]]; then

    case "$1" in
        mac*|osx) SAVETO=${BIN_PATH}/macos/
        ;;
        lin*|bsd|arch*) SAVETO=${BIN_PATH}/linux/
        ;;
        win|windows) SAVETO=${BIN_PATH}/windows/
        ;;
        *)
            echo "unknow platform $1"
            exit 1
        ;;
    esac

    _BIN_TYPE=$2
    _BIN_NAME=$3
else
    SAVETO=${BIN_PATH}/all/
    _BIN_TYPE=$1
    _BIN_NAME=$2
fi

cd ${SAVETO}

[ -z $_BIN_NAME ] && echo 'type the script name please' && exit
[ -f $_BIN_NAME ] && echo 'script exist rename it please' && exit

if [[ -d "${SAVETO}" ]];then
    if [[ -n $_BIN_TYPE ]]; then
        case "$_BIN_TYPE" in
            bash) echo "#!/usr/bin/env bash" > $_BIN_NAME
            ;;
            sh) echo "#!/usr/bin/env sh" > $_BIN_NAME
            ;;
            zsh) echo "#!/usr/bin/env zsh" > $_BIN_NAME
            ;;
            fish) echo "#!/usr/bin/env fish" > $_BIN_NAME
            ;;
            perl) echo "#!/usr/bin/env perl" > $_BIN_NAME
            ;;
            php) echo "#!/usr/bin/env php" > $_BIN_NAME
            ;;
            py) echo "#!/usr/bin/env python
# -*- coding: utf-8 -*-" > $_BIN_NAME
            ;;
            *) echo default
            ;;
        esac

        # fix permission
        chmod +x $_BIN_NAME
        echo "Script ${_BIN_NAME} create success in ${SAVETO}${_BIN_NAME}"
    else
        echo 'type script type(language) please'
    fi
fi
