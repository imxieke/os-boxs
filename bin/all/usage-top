#!/usr/bin/env bash
###
 # @Author: Cloudflying
 # @Date: 2021-12-07 16:08:15
 # @LastEditTime: 2021-12-07 16:14:23
 # @LastEditors: Cloudflying
 # @Description: 查找目录资源占用 Top
 # @FilePath: /.boxs/bin/all/usage-top
### 

if [[ -n "${2}" ]]; then
    _USAGE_TOP=$2
else
    _USAGE_TOP=10
fi

/usr/bin/du -h -d 1 -I ~/Library -I /Applications -I /dev $1 | sort -h --reverse | tail -n +2 | head -n ${_USAGE_TOP}